{
	"compilerOptions": {
		// Enable latest features
		"lib": ["ESNext", "WebWorker"],
		"target": "ESNext",
		"module": "ESNext",
		"allowJs": true,
		// Bundler mode
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		"skipLibCheck": true
	}
}
